<div id="main-container" class="p-3 mb-2 bg-info text-white">
  <a href="/" class="text-light">Home</a>
  <div class="row">
      <div class="col-8 offset-2">
        <div id="categories" class="jumbotron text-info">
          <h2 class="display-4 font-weight-light">Categories</h2>
        </div>

        <div class="container">
          <div class="row">
            <div class="col-8 offset-4">

              <form class="clearfix mb-4 add-form form-inline" method="POST">
                <label for="categoryName"></label>
                <input type="text" id="categoryName" class="form-control" aria-describedby="categoryName"
                  placeholder="New Category Name">
                <button id="submit" class="btn btn-secondary">Add</button>
            </div>

            </form>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-8 offset-2">
          <ul id="category-list" class="list-group"></ul>
        </div>
      </div>
    </div>
  </div>

</div>

