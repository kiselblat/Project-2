<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2>Send Report</h2>
      <a href="/">Recipients Email</a>
      <form class="clearfix mb-4 add-form" method="POST">
        <label for="email-address">Address</label>
        <input type="text" id="email-address" class="form-control" aria-describedby="email-address" placeholder="Enter email here">
        <label for="additional-message">Additional Message</label>
        <input type="textarea" id="additional-message" class="form-control" aria-describedby="additional-message" placeholder="Enter additional message here">
        <button id="submit" class="btn btn-primary float-right">Submit</button>
      </form>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/mailer.js"></script>
