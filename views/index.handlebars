<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="inventory-text">Inventory Text</label>
            <input type="text" id="inventory-text" class="form-control" aria-describedby="inventory-text" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="inventory-description">Inventory Description</label>
            <textarea class="form-control" id="inventory-description" aria-describedby="inventory-description" placeholder="Enter Example Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Inventory:</h3>
        <ul id="inventory-list" class="list-group">
          {{#each Inventory}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="inventory/{{this.id}}">{{this.category}}</a>
            <p>
            <strong>ID</strong>: {{this.item}}</p>
          <p>
          <p>
            <strong>Category</strong>: {{this.category}}</p>
          <p>
            <strong>Description:</strong> {{this.description}}</p>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
