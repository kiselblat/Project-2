<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2>Add A New Location</h2>
      <form class="clearfix mb-4 add-form" method="POST">
        <label for="locationName">Location Name</label>
        <input type="text" id="locationName" class="form-control" aria-describedby="locationName" placeholder="Enter new location name here">
        <button id="submit" class="btn btn-primary float-right">Submit</button>
      </form>
    </div>
  </div>
</div>

